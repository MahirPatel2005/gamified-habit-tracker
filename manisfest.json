{
    "manifest_version": 3,
    "name": "Gamified Habit Tracker",
    "version": "1.0",
    "description": "A gamified approach to improving browsing habits",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "tabs"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  